<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="pane"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.sora.fx.controllers.AddContactController">
    <children>
        <Label fx:id="lblCaption" text="Добавление">
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </Label>
        <TextField fx:id="txtNick" promptText="Ник">
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </TextField>
        <TextField fx:id="txtName" promptText="Имя">
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </TextField>
        <TextField fx:id="txtEmail" promptText="E-mail">
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </TextField>
        <TextField fx:id="txtPhone" promptText="Телефон">
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </TextField>

        <HBox alignment="center">
            <Button layoutX="30.0" layoutY="113.0" fx:id="btnCancel" text="%contactform.cancel" onAction="#cancel">
                <HBox.margin><Insets right="3.0"/></HBox.margin>
            </Button>
            <Button layoutX="30.0" layoutY="113.0" fx:id="btnAdd" text="Ok" onAction="#ok"/>
        </HBox>
    </children>
    <padding>
        <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
    </padding>
</VBox>
